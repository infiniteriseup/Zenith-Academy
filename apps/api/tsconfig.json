{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "rootDir": ".",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./types/"],
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    },
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
